<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.text.Text?>
<?import javafx.scene.shape.Line?>
<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="view.RegisterMenu"
            prefHeight="400.0" prefWidth="600.0">
    <top>
        <VBox alignment="TOP_CENTER">
            <Text text=""/>
            <Text text=""/>
            <Text text="welcome to AA please enter a userName and a password to create an account" textAlignment="CENTER"/>
            <Text text=""/>
            <Text text=""/>
        </VBox>

    </top>
    <center>
        <VBox alignment="BASELINE_CENTER" spacing="5">
            <Label text="choose your username: "/>
            <TextField promptText="username" maxWidth="400" fx:id="username" styleClass="text-input"/>
            <Label text="enter your password"/>
            <PasswordField promptText="password" fx:id="password" maxWidth="400"/>
            <Label text="enter your password again"/>
            <PasswordField promptText="password again" maxWidth="400" fx:id="passwordAgain"/>
            <Text text=""/>
            <HBox alignment="CENTER" spacing="15">
                <Button text="register" onMouseClicked="#register"/>
                <Button text="back" onMouseClicked="#backToLoginMenu"/>
            </HBox>

            <Line/>
            <Text text="" fx:id="alert"/>
        </VBox>
    </center>

</BorderPane>
