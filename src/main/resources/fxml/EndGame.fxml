<AnchorPane prefHeight="392.0" prefWidth="321.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="view.EndGame">
   <children>
      <ButtonBar layoutX="41.0" layoutY="315.0" prefHeight="40.0" prefWidth="225.0">
        <buttons>
          <Button mnemonicParsing="false" onMouseClicked="#startGame" prefHeight="25.0" prefWidth="131.0" text="play again" />
            <Button mnemonicParsing="false" onMouseClicked="#startMainMenu" text="Main menu" />
        </buttons>
      </ButtonBar>
      <ImageView fx:id="gameStatusImageView" fitHeight="128.0" fitWidth="216.0" layoutX="52.0" layoutY="21.0" pickOnBounds="true" preserveRatio="true" />
      <Label layoutX="48.0" layoutY="179.0" prefHeight="35.0" prefWidth="124.0" text="Your score:">
         <font>
            <Font size="24.0" />
         </font>
      </Label>
      <StackPane layoutX="172.0" layoutY="155.0">
         <children>
            <Circle fill="DODGERBLUE" radius="42.0" stroke="BLACK" strokeType="INSIDE" />
            <Label fx:id="score" alignment="CENTER" prefHeight="56.0" prefWidth="55.0" text="score">
               <font>
                  <Font size="38.0" />
               </font>
            </Label>
         </children>
      </StackPane>
      <ImageView fx:id="continueIV" fitHeight="49.0" fitWidth="49.0" layoutX="136.0" layoutY="266.0" pickOnBounds="true" preserveRatio="true" />
   </children>
</AnchorPane>
